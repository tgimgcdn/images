{
  "version": 1,
  "include": ["/*"],
  "exclude": ["/images/*"],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/functions/api/[[path]].js"
    },
    {
      "src": "/admin/login.html",
      "dest": "/public/admin/login.html"
    },
    {
      "src": "/admin$",
      "dest": "/public/admin/index.html"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/functions/admin/[[path]].js"
    },
    {
      "src": "/js/(.*)",
      "dest": "/public/js/$1"
    },
    {
      "src": "/css/(.*)",
      "dest": "/public/css/$1"
    },
    {
      "src": "/$",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
} 
