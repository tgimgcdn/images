{
  "version": 1,
  "include": ["/*"],
  "exclude": ["/images/*"],
  "routes": [
    {
      "pattern": "/api/upload/create-session",
      "script": "functions/api/upload.js"
    },
    {
      "pattern": "/api/upload/chunk",
      "script": "functions/api/upload.js"
    },
    {
      "pattern": "/api/upload/complete",
      "script": "functions/api/upload.js"
    },
    {
      "pattern": "/api/upload/cancel",
      "script": "functions/api/upload.js"
    },
    {
      "pattern": "/api/upload",
      "script": "functions/api/upload.js"
    },
    {
      "pattern": "/api/admin/login",
      "script": "functions/api/[[path]].js"
    },
    {
      "pattern": "/api/admin/logout",
      "script": "functions/api/[[path]].js"
    },
    {
      "pattern": "/api/admin/change-password",
      "script": "functions/api/[[path]].js"
    },
    {
      "pattern": "/api/admin/recaptcha-config",
      "script": "functions/api/[[path]].js"
    },
    {
      "pattern": "/api/settings/guest-upload",
      "script": "functions/api/[[path]].js"
    },
    {
      "pattern": "/api/settings",
      "script": "functions/api/[[path]].js"
    },
    {
      "pattern": "/api/stats/summary",
      "script": "functions/api/[[path]].js"
    },
    {
      "pattern": "/api/health",
      "script": "functions/api/[[path]].js"
    },
    {
      "pattern": "/api/*",
      "script": "functions/api/[[path]].js"
    },
    {
      "pattern": "/admin/*",
      "script": "functions/admin/[[path]].js"
    },
    {
      "pattern": "/*",
      "script": "functions/[[path]].js"
    }
  ]
} 
